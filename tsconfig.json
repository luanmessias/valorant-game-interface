{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/fonts/*": ["./public/fonts/*"],
      "@/svg/*": ["./public/svg/*"],
      "@/img/*": ["./public/img/*"],
      "@/atoms/*": ["./src/atoms/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/molecules/*": ["./src/molecules/*"],
      "@/organisms/*": ["./src/organisms/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/globalstyles/*": ["./src/styles/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
}
